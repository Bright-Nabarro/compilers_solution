{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",               // 配置名称，将会在启动配置中显示
            "type": "cppdbg",                     // 配置类型，表示使用C/C++调试
            "request": "launch",                  // 请求类型，可以是 launch 或 attach
            "program": "${workspaceRoot}/3/regex/bin/unit_test", // 调试的程序路径
            "args": [],                           // 启动程序时传递的命令行参数
            "stopAtEntry": false,                 // 是否在程序入口处停下
            "cwd": "${workspaceFolder}",          // 调试时的工作目录
            "environment": [],
            "externalConsole": false,             // 是否使用外部终端
            "MIMode": "gdb",                      // 使用的调试器类型
            "miDebuggerPath": "/usr/bin/gdb",     // gdb 的路径
            "setupCommands": [
                {
                    "description": "启用调试器中的漂亮打印",
                    "text": "-enable-pretty-printing",  // 让gdb支持C++ STL类型的漂亮打印
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",                  // 启动调试之前执行的任务（如编译）
            "postDebugTask": "",                  // 调试结束后执行的任务
            "logging": {
                "trace": false,                   // 是否打印调试过程的日志
                "traceResponse": false,
                "engineLogging": false
            },
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}
